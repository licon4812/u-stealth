<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="UStealth.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UStealth.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tableView="using:WinUI.TableView"
    Title="U-Stealth"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="16" RowDefinitions="Auto,*">
        <Button
            x:Name="RefreshButton"
            Width="100"
            Height="32"
            HorizontalAlignment="Right"
            Click="RefreshButton_Click"
            Content="Refresh" />
        <tableView:TableView
            x:Name="DrivesTableView"
            Grid.Row="1"
            Margin="0,16,0,0"
            DoubleTapped="DrivesTableView_DoubleTapped"
            ItemsSource="{x:Bind ViewModel.Drives}"
            SelectionMode="Single" />
    </Grid>
</Window>
